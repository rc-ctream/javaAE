<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             version="3.0">

    <persistence-unit name="customerPU">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.schoolar.java.customers.entity.Customer</class>

        <properties>
            <!-- JDBC -->
            <property name="jakarta.persistence.jdbc.driver"
                      value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:postgresql://localhost:5432/javae"/>
            <property name="jakarta.persistence.jdbc.user" value="javae"/>
            <property name="jakarta.persistence.jdbc.password" value="secret"/>

            <!-- Hibernate -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>

</persistence>
